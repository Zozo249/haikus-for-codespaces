from kivy.app import App

from kivy.uix.boxlayout import BoxLayout

from kivy.uix.image import Image

class TransportationApp(App):

    

    def build(self):

        # Create a box layout for the app

        layout = BoxLayout()

        

        # Add a black shiny moving horse image to the layout

        horse = Image(source='horse.png', anim_delay=0.1, keep_ratio=True, allow_stretch=True)

        layout.add_widget(horse)

        

        return layout

if __name__ == '__main__':

    TransportationApp().run()
